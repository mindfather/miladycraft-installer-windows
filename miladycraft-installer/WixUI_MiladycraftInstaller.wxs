<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
    <?foreach WIXUIARCH in X86;X64;A64 ?>
    <Fragment>
		<WixVariable
			Id="WixUIBannerBmp"
			Value="..\assets\bannrbmp.bmp" />
		<WixVariable
			Id="WixUIDialogBmp"
			Value="..\assets\dlgbmp.bmp" />

        <UI Id="WixUI_MiladycraftInstaller_$(WIXUIARCH)">
            <TextStyle Id="WixUI_Font_Normal" FaceName="Courier" Size="8" />
            <TextStyle Id="WixUI_Font_Bigger" FaceName="Courier" Size="12" Red="111" Green="140" Blue="31" />
            <TextStyle Id="WixUI_Font_Title" FaceName="Courier" Size="9" Bold="yes" Red="204" Green="0" Blue="18" />


            <Property Id="DefaultUIFont" Value="WixUI_Font_Normal" />

            <DialogRef Id="ErrorDlg" />
            <DialogRef Id="FatalError" />
            <DialogRef Id="FilesInUse" />
            <DialogRef Id="MsiRMFilesInUse" />
            <DialogRef Id="PrepareDlg" />
            <DialogRef Id="ProgressDlg" />
            <DialogRef Id="ResumeDlg" />
            <DialogRef Id="UserExit" />
            <DialogRef Id="WelcomeDlg" />
            <DialogRef Id="RemiliaLicenseAgreementDlg" />

            <Publish Dialog="ExitDialog" Control="Finish" Event="EndDialog" Value="Return" Order="999" />

            <Publish Dialog="WelcomeDlg" Control="Next" Event="NewDialog" Value="JDKDlg" Condition="(NOT Installed) AND (NOT TEMURIN_JDK_21_INSTALLED) " />
            <Publish Dialog="WelcomeDlg" Control="Next" Event="NewDialog" Value="RemiliaLicenseAgreementDlg" Condition="NOT Installed" />
            <Publish Dialog="WelcomeDlg" Control="Next" Event="NewDialog" Value="MaintenanceTypeDlg" Condition="Installed" />

			<Publish Dialog="JDKDlg" Control="Back" Event="NewDialog" Value="WelcomeDlg" />
			<Publish Dialog="JDKDlg" Control="Next" Event="NewDialog" Value="RemiliaLicenseAgreementDlg" Order="1" />

            <Publish Dialog="RemiliaLicenseAgreementDlg" Control="Next" Event="NewDialog" Value="VerifyReadyDlg" />

            <Publish Dialog="VerifyReadyDlg" Control="Back" Event="NewDialog" Value="MaintenanceTypeDlg" Condition="NOT Installed" />
            <Publish Dialog="VerifyReadyDlg" Control="Back" Event="NewDialog" Value="RemiliaLicenseAgreementDlg" Condition="Installed" />

            <Publish Dialog="MaintenanceWelcomeDlg" Control="Next" Event="NewDialog" Value="MaintenanceTypeDlg" />

            <Publish Dialog="MaintenanceTypeDlg" Control="RepairButton" Event="NewDialog" Value="VerifyReadyDlg" />
            <Publish Dialog="MaintenanceTypeDlg" Control="RemoveButton" Event="NewDialog" Value="VerifyReadyDlg" />
            <Publish Dialog="MaintenanceTypeDlg" Control="Back" Event="NewDialog" Value="MaintenanceWelcomeDlg" />

            <Publish Dialog="VerifyReadyDlg" Control="Back" Event="NewDialog" Value="WelcomeDlg" Order="2" Condition="Installed AND PATCH" />

            <Property Id="ARPNOMODIFY" Value="1" />
        </UI>

        <UIRef Id="WixUI_Common" />
    </Fragment>
    <?endforeach?>

</Wix>
